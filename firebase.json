{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    },
    {
      "source": "student-functions",
      "codebase": "student",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ]
    }
  ],
  "hosting": [
    {
      "target": "employee",
      "public": "out",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ]
    },
    {
      "target": "student",
      "public": "out",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/student",
          "destination": "/student/login",
          "type": 301
        },
        {
          "source": "/",
          "destination": "/student/login",
          "type": 301
        },
        {
          "source": "/student/",
          "destination": "/student/login",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/index.html",
          "destination": "/student/index.html"
        }
      ]
    },
    {
      "target": "teacher",
      "public": "out",
      "cleanUrls": true,
      "ignore": [
        "firebase.json",
        "**/.*",
        "**/node_modules/**"
      ],
      "redirects": [
        {
          "source": "/teachers",
          "destination": "/teachers/login",
          "type": 301
        },
        {
          "source": "/",
          "destination": "/teachers/login",
          "type": 301
        },
        {
          "source": "/teachers/",
          "destination": "/teachers/login",
          "type": 301
        }
      ],
      "rewrites": [
        {
          "source": "/index.html",
          "destination": "/teachers/index.html"
        }
      ]
    }
  ],
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  }
}
